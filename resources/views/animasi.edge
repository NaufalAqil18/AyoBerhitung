<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>AyoBerhitung - Video Belajar</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        body { background: #f8f8f8; }
        .main-title { color: #7ed957; font-size: 2rem; font-weight: bold; margin-top: 1.5rem; margin-bottom: 1.2rem; text-align: center; }
        .video-card { background: #fff; border-radius: 18px; box-shadow: 0 2px 12px #0001; padding: 2rem 1.5rem; margin-bottom: 2rem; }
        .video-main { border-radius: 16px; width: 100%; max-height: 340px; object-fit: cover; }
        .video-title { color: #7ed957; font-size: 1.3rem; font-weight: bold; text-align: center; margin: 1.2rem 0 0.7rem 0; }
        .video-actions { text-align: center; margin-bottom: 1.2rem; }
        .video-actions .btn { margin: 0 0.3rem 0.5rem 0.3rem; font-weight: 600; }
        .next-title { color: #7ed957; font-size: 1.1rem; font-weight: bold; margin-bottom: 0.7rem; }
        .next-videos { display: flex; gap: 1.2rem; justify-content: center; flex-wrap: wrap; }
        .next-video-card { background: #fff; border-radius: 12px; box-shadow: 0 2px 8px #0001; padding: 0.7rem; width: 170px; text-align: center; border: 2px solid transparent; transition: border 0.2s; cursor: pointer; }
        .next-video-card.selected, .next-video-card:hover { border: 2px solid #7ed957; }
        .next-video-thumb { width: 100%; height: 90px; object-fit: cover; border-radius: 8px; margin-bottom: 0.5rem; }
        .next-video-title { font-size: 1.05rem; font-weight: 600; color: #222; }
    </style>
</head>
<body>
    <div class="container-fluid">
      <div class="row">
        <div class="col-auto p-0">
          @set('activePage', 'animasi')
          @include('partials.sidebar')
        </div>
        <div class="col ps-0 pe-4" style="min-height:100vh;">
          <div class="main-title">üìö AyoBerhitung - Video Belajar</div>
          <div class="video-card">
            <video id="mainVideo" class="video-main" controls poster="/images/1.jpg" src="/videos/penjumlahan.mp4">
                Your browser does not support the video tag.
            </video>
            <div class="video-title" id="mainVideoTitle">Belajar Penjumlahan dengan Cerita Seru!</div>
            <div class="video-actions">
                <button class="btn btn-info" onclick="repeatVideo()">üîÅ Ulangi</button>
                <button class="btn btn-success" onclick="markWatched()">‚úÖ Selesai Menonton</button>
                <a href="/latihan" class="btn btn-primary">‚ñ∂Ô∏è Lanjut Latihan</a>
            </div>
            <div class="next-title">üì∫ Video Berikutnya</div>
            <div class="next-videos">
                <div class="next-video-card selected" onclick="selectVideo(0)">
                    <img src="/images/1.jpg" class="next-video-thumb" alt="Penjumlahan">
                    <div class="next-video-title">Penjumlahan Seru</div>
                </div>
                <div class="next-video-card" onclick="selectVideo(1)">
                    <img src="/images/2.jpg" class="next-video-thumb" alt="Pengurangan">
                    <div class="next-video-title">Pengurangan Cerdas</div>
                </div>
                <div class="next-video-card" onclick="selectVideo(2)">
                    <img src="/images/3.jpg" class="next-video-thumb" alt="Perkalian">
                    <div class="next-video-title">Perkalian Mudah</div>
                </div>
                <div class="next-video-card" onclick="selectVideo(3)">
                    <img src="/images/4.jpg" class="next-video-thumb" alt="Pembagian">
                    <div class="next-video-title">Pembagian Seru</div>
                </div>
                <div class="next-video-card" onclick="selectVideo(4)">
                    <img src="/images/5.jpg" class="next-video-thumb" alt="Kombinasi">
                    <div class="next-video-title">Kombinasi Aritmatika</div>
                </div>
            </div>
          </div>
        </div>
      </div>
    </div>
    <script>
        // Data video
        const videos = [
            {
                src: '/videos/penjumlahan.mp4',
                title: 'Belajar Penjumlahan dengan Cerita Seru!',
                poster: '/images/1.jpg'
            },
            {
                src: '/videos/pengurangan.mp4',
                title: 'Belajar Pengurangan dengan Cerita Menarik!',
                poster: '/images/2.jpg'
            },
            {
                src: '/videos/perkalian.mp4',
                title: 'Belajar Perkalian Mudah!',
                poster: '/images/3.jpg'
            },
            {
                src: '/videos/pembagian.mp4',
                title: 'Belajar Pembagian Seru!',
                poster: '/images/4.jpg'
            },
            {
                src: '/videos/kombinasi.mp4',
                title: 'Kombinasi Aritmatika: Penjumlahan, Pengurangan, Perkalian, Pembagian',
                poster: '/images/5.jpg'
            }
        ];
        let currentVideo = 0;
        function selectVideo(idx) {
            currentVideo = idx;
            const v = videos[idx];
            const videoEl = document.getElementById('mainVideo');
            videoEl.src = v.src;
            videoEl.poster = v.poster;
            document.getElementById('mainVideoTitle').innerText = v.title;
            document.querySelectorAll('.next-video-card').forEach((el, i) => {
                if (i === idx) el.classList.add('selected');
                else el.classList.remove('selected');
            });
            videoEl.load();
            videoEl.play();
        }
        function repeatVideo() {
            const videoEl = document.getElementById('mainVideo');
            videoEl.currentTime = 0;
            videoEl.play();
        }
        function markWatched() {
            alert('Selamat! Kamu telah menonton video ini.');
        }
    </script>
</body>
</html>